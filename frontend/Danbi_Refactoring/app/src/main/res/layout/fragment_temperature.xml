<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/temp_info_txt" />

    <ImageButton
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:id="@+id/imageButton_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        app:srcCompat="@drawable/temp_reload" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/temp_house_img" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/junggt140"
        android:text="비닐 하우스의 현재 온도와 습도 입니다."
        android:textColor="#000000"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:fontFamily="@font/junggt160"
            android:paddingTop="9dp"
            android:text="온도"
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView_status_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/junggt140"
            android:paddingTop="14dp"
            android:text="온도가 너무 높아요!"
            android:textColor="#E61E48"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/textView_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:fontFamily="@font/junggt150"
            android:text="23"
            android:textColor="#E61E48"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/textView_temp_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/junggt150"
            android:text="°C"
            android:textColor="#E61E48"
            android:textSize="24dp" />
    </LinearLayout>



    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        app:srcCompat="@drawable/temp_paragraph_line" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginRight="5dp"
            android:id="@+id/textView_species_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/junggt140"
            android:text="상추"
            android:textColor="#7E7E7E"
            android:textSize="13dp" />

        <TextView
            android:layout_marginRight="30dp"
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/junggt140"
            android:text="재배 적정 온도"
            android:textColor="#7E7E7E"
            android:textSize="13dp" />
    </LinearLayout>

    <TextView
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:id="@+id/textView_proper_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/junggt140"
        android:text="낮 15~22°C, 밤 8~15°C, 지온 13~18°C"
        android:textColor="#7E7E7E"
        android:textSize="13dp" />


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:paddingTop="9dp"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/junggt160"
            android:layout_weight="1"
            android:text="습도"
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:layout_marginRight="10dp"
            android:paddingTop="14dp"
            android:id="@+id/textView_status_hum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/junggt140"
            android:text="습도가 조금 낮아요"
            android:textColor="#F5A623"
            android:textSize="13dp"/>

        <TextView
            android:id="@+id/textView_hum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/junggt150"
            android:text="23"
            android:textColor="#F5A623"
            android:textSize="24dp" />

        <TextView
            android:layout_marginRight="30dp"
            android:id="@+id/textView_hum_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/junggt150"
            android:text="%"
            android:textColor="#F5A623"
            android:textSize="24dp" />
    </LinearLayout>


    <ImageView
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/temp_paragraph_line" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:layout_marginRight="2dp"
            android:id="@+id/textView_species_hum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/junggt140"
            android:text="상추"
            android:textColor="#7E7E7E"
            android:textSize="13dp" />

        <TextView
            android:layout_marginRight="30dp"
            android:id="@+id/textView_proper_hum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/junggt140"
            android:text="는 서늘한 기후에서 잘 자라는 호냉성 채소 입니다."
            android:textColor="#7E7E7E"
            android:textSize="13dp" />

    </LinearLayout>


</LinearLayout>